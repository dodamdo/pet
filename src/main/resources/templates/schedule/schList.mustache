{{>common/header}}

<style>
    .sidebar {
        width: 200px; /* 사이드바 너비 */
        border: 1px solid #ccc; /* 사이드바 테두리 */
        padding: 10px; /* 패딩 */
        float: left; /* 왼쪽에 배치 */
    }

    .year {
        cursor: pointer; /* 클릭 가능하게 보이도록 */
        padding: 10px;
        background-color: #f0f0f0; /* 배경색 */
        border: 1px solid #ccc; /* 테두리 */
        margin-bottom: 5px; /* 간격 */
        transition: background-color 0.3s; /* 부드러운 배경색 전환 */
    }

    .year:hover {
        background-color: #e0e0e0; /* 호버 시 배경색 변경 */
    }

    .months {
        display: none; /* 처음에는 숨김 */
        padding-left: 20px; /* 들여쓰기 */
        margin-bottom: 10px; /* 연도 간 간격 */
        border-left: 2px solid #ccc; /* 왼쪽 테두리 */
    }

    .month {
        padding: 5px; /* 월 항목 패딩 */
        cursor: pointer; /* 클릭 가능하게 보이도록 */
    }

    .month:hover {
        background-color: #f9f9f9; /* 호버 시 월 항목 배경색 변경 */
    }

    .main {
        margin-left: 220px; /* 사이드바 너비 만큼 여백 */
        padding: 10px; /* 패딩 */
    }

    table {
        width: 100%; /* 테이블 너비 */
        border-collapse: collapse; /* 테두리 겹침 방지 */
    }

    th, td {
        border: 1px solid #ccc; /* 테두리 */
        padding: 8px; /* 패딩 */
        text-align: left; /* 왼쪽 정렬 */
    }

    th {
        background-color: #f0f0f0; /* 헤더 배경색 */
    }

    a {
        text-decoration: none; /* 링크 밑줄 제거 */
        color: #007bff; /* 링크 색상 */
    }

    a:hover {
        text-decoration: underline;
    }
</style>
