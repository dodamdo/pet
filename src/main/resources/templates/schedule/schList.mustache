<script>
    function toggleMonths(yearId) {
        const monthsDiv = document.getElementById(yearId);
        if (monthsDiv.style.display === "none" || monthsDiv.style.display === "") {
            monthsDiv.style.display = "block";
        } else {
            monthsDiv.style.display = "none";
        }
    }
</script>

